{
  "version": 2,
  "framework": "vite",
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  }
}
